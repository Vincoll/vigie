    "version": "0.2.0",
    "configurations": [
        {
            "name": "Worker Run config",
            "debugAdapter": "dlv-dap",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "buildFlags": "-race",
            "program": "${workspaceFolder}",
            "args": [
                "worker",
                "--config",
                "./config.toml",
            ],
            "env": {
                "ENV": "dev",
                "cgo_enabled": "1"
            },
        },
